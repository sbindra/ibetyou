<%= provide(:title, "The Bet") %>
<h1>The Bet</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@bet) do |f| %>
			Bet: <%= @bet.thebet %><br>
			Created By: <%= @bet.user.name %><br>
			<br><br>
			The Result:
			<% if @bet.betresult.nil? %>
				<% if current_user == @bet.user %>				
					<%= f.submit "Yes", class: "btn btn-large btn-primary" %>
					<%= f.submit "No", class: "btn btn-large btn-primary" %>
				<% end %>
			<% else %>
				<%= @bet.betresult ? 'Yes' : 'No' %>
			<% end %>
		<% end %>
		<% if current_user == @bet.user %>
			OWNER
		<% end %>
	</div>
</div>